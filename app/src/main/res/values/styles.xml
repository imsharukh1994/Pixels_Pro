<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransparentDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Dialog_first" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/Selected</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="backgroundTint">@color/Background</item>
        <item name="android:windowBackground">@color/Background</item>
    </style>
    <style name="spinnerTextColor" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="switchbuttons" parent="Widget.Material3.CompoundButton.Switch">
        <item name="colorControlActivated">@color/Selected</item>
        <item name="colorSwitchThumbNormal">@color/Buttons</item>
    </style>

</resources>